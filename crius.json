{
  "config": {
    "paths": {
      "source": "app/",
      "dist": "dist/"
    },
    "browserSync": {
      "mode": "server",
      "watch": [
        "{src,templates}/**/*.{php,html}",
        "*.{php,html}"
      ],
      "devUrl": "localhost/web/root"
    }
  },
  "resources": {
    "html": {
      "pattern": "*.{html,njk,nunjucks}",
      "directory": "",
      "assets": {
        "./": {
          "files": "*.{html,njk,nunjucks}"
        }
      }
    },
    "scripts": {
      "pattern": "*.js",
      "directory": "assets/scripts",
      "assets": {
        "main.js": {
          "files": "assets/scripts/wrapper.js",
          "vendor": "app/assets/scripts/vendor/*.js",
          "npm": []
        }
      }
    },
    "styles": {
      "pattern": "*.{css,styl,scss,sass,less}",
      "directory": "assets/styles",
      "assets": {
        "main.css": {
          "files": "assets/styles/wrapper.styl",
          "vendor": [
            "app/assets/styles/vendor/reset.css",
            "app/assets/styles/vendor/*.css"
          ],
          "npm": [],
          "uncss": true
        }
      }
    },
    "fonts": {
      "pattern": "*.{eot,otf,svg,ttc,ttf,woff,woff2}",
      "directory": "assets/fonts",
      "assets": {
        "./": "fonts/**/*"
      }
    },
    "images": {
      "pattern": "*.{jpg,png,gif,svg}",
      "directory": "assets/images",
      "assets": {
        "./": "images/**/*"
      }
    }
  }
}
